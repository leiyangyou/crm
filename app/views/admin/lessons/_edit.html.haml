.remote
  = form_for([:admin, @lesson], :as => :lesson, :html => one_submit_only(:lesson).merge(:class => "edit_lesson", :id => "edit_lesson_#{@lesson.id}"), :remote => true) do |f|
    = link_to_close edit_admin_lesson_path(@lesson)
    = f.error_messages
    = render :partial => "top_section", :locals => {:f =>f, :edit =>true}
    .buttonbar
      = f.submit t(:save_lesson), :id => :lesson_submit
      or
      = link_to_cancel edit_admin_lesson_path(@lesson)
