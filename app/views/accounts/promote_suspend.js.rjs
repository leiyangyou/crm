id = dom_id(@account)
if @account.valid? && @membership_suspension.valid?
  page[id].replace :partial => "account", :collection => [@account]
  page[id].visual_effect :highlight, :duration => 1.0
else
  page[id].replace_html :partial => "suspend"
  page[id].visual_effect :shake, :duration => 0.25, :distance => 0
end