- edit ||= false
- collapsed = (@account.errors.empty? && session[:account_contact].nil?)
= subtitle :account_contact, collapsed, t(:contact_info)
.section
  %small#account_contact_intro{ hidden_if(!collapsed) }
    = t(:intro, t(:account_small)) unless edit
  #account_contact{ hidden_if(collapsed) }
    %table
      %tr
        %td{ :colspan => 3 }
          %table{ :width => "100%", :cellpadding => 0, :cellspacing => 0 }
            %tr
              %td
                .label #{t :phone}:
                = f.text_field :phone, :style => "width:154px"
              %td= spacer
              %td
                .label #{t :work_phone}:
                = f.text_field :work_phone, :style => "width:154px"
              %td= spacer
              %td
                .label #{t :company}:
                = f.text_field :company, :style => "width:154px"
      %tr
        %table{ :width => "100%", :cellpadding => 0, :cellspacing => 0 }
          %tr
            %td
              .label #{t :emergency_contact_1}:
              = f.text_field :emergency_contact_1, :style => "width:154px"
            %td= spacer
            %td
              .label #{t :emergency_contact_2}:
              = f.text_field :emergency_contact_2, :style => "width:154px"
            %td= spacer
            %td
              .label #{t :email}:
              = f.text_field :email, :style => "width:154px"
    %table.address(cellpadding="0" cellspacing="0")
      %tr
        %td
          .label #{t :address}:
          = address_field(f, f.object, :street1, "width:240px; margin-top:3px")
          = address_field(f, f.object, :street2, "width:240px;")
    %table.address(cellpadding="0" cellspacing="0")
      %tr
        %td
          = address_field(f, f.object, :zipcode, "width:80px;")
