.remote
  %h3= t(Contracts::LessonTransferContract.to_s.underscore)
  = form_for [account, contract], :url => update_lesson_transfer_account_lesson_path(account, lesson), :method => :put, :remote => true do |f|
    = link_to_close new_lesson_transfer_account_lesson_path(account, lesson)
    = error_messages_for contract, :object_name => t("contract")
    = render "contracts/lesson_transfer_contract", :f => f
    .buttonbar
      = f.submit t(:new), :id => :new_lesson_transfer
      or
      = link_to_cancel new_lesson_transfer_account_lesson_path(account, lesson)