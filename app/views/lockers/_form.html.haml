= form_for(@locker) do |f|
  - if @locker.errors.any?
    #error_explanation
      %h2
        = pluralize(@locker.errors.count, "error")
        prohibited this locker from being saved:
      %ul
        - @locker.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :string
    %br/
    = f.text_field :string
  .field
    = f.label :account
    %br/
    = f.text_field :account
  .field
    = f.label :contract
    %br/
    = f.text_field :contract
  .field
    = f.label :start_date
    %br/
    = f.date_select :start_date
  .field
    = f.label :due_date
    %br/
    = f.date_select :due_date
  .actions
    = f.submit
