.remote
  = simple_form_for([@account, @contract], :url => account_contract_path(@account, @contract), :html => one_submit_only(:contract), :remote => true) do |f|
    = link_to_close edit_account_contract_path(@account, @contract)
    = error_messages_for @contract, :object_name => t('contract')
    = render "#{@contract.type.underscore}", :f => f

    .buttonbar
      = f.submit t :save_contract
      == #{t :or}
      = link_to_cancel edit_account_contract_path(@account, @contract)
